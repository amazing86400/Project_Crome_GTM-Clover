{
  "manifest_version": 3,
  "name": "GTM Clover",
  "description": "Detect and display Google Tag Manager (GTM) container IDs by analyzing network requests on any website.",
  "version": "1.0.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "host_permissions": ["<all_urls>"],
  "permissions": ["scripting", "activeTab", "storage"]
}
